@page
@model EntidadeReserva.Pages.CreatePacoteTuristicoModel

@{
    ViewData["Title"] = "Novo Pacote Turístico";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <p class="text-muted">Cadastre um novo pacote turístico com informações completas</p>

    <form method="post" class="needs-validation" novalidate>

        
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Informações Básicas do Pacote</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PacoteTuristico.Nome" class="form-label"></label>
                        <input asp-for="PacoteTuristico.Nome" class="form-control" placeholder="Ex: Pacote Romântico para Paris" />
                        <span asp-validation-for="PacoteTuristico.Nome" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="PacoteTuristico.Categoria" class="form-label"></label>
                        <select asp-for="PacoteTuristico.Categoria" class="form-select">
                            <option value="">Selecione uma categoria</option>
                            @foreach (var categoria in Model.Categorias)
                            {
                                <option value="@categoria">@categoria</option>
                            }
                        </select>
                        <span asp-validation-for="PacoteTuristico.Categoria" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="PacoteTuristico.Descricao" class="form-label"></label>
                    <textarea asp-for="PacoteTuristico.Descricao" class="form-control" rows="3"
                              placeholder="Descreva detalhadamente o pacote turístico..."></textarea>
                    <span asp-validation-for="PacoteTuristico.Descricao" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="PacoteTuristico.Preco" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input asp-for="PacoteTuristico.Preco" class="form-control" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="PacoteTuristico.Preco" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="PacoteTuristico.Duracao" class="form-label"></label>
                        <input asp-for="PacoteTuristico.Duracao" class="form-control" />
                        <span asp-validation-for="PacoteTuristico.Duracao" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="PacoteTuristico.Validade" class="form-label"></label>
                        <input asp-for="PacoteTuristico.Validade" class="form-control" type="date" />
                        <span asp-validation-for="PacoteTuristico.Validade" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Informações do Destino</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PacoteTuristico.Destino.Pais" class="form-label"></label>
                        <input asp-for="PacoteTuristico.Destino.Pais" class="form-control" placeholder="Ex: Brasil" />
                        <span asp-validation-for="PacoteTuristico.Destino.Pais" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="PacoteTuristico.Destino.Cidade" class="form-label"></label>
                        <input asp-for="PacoteTuristico.Destino.Cidade" class="form-control" placeholder="Ex: Rio de Janeiro" />
                        <span asp-validation-for="PacoteTuristico.Destino.Cidade" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="PacoteTuristico.Destino.PontoTuristicoPrincipal" class="form-label"></label>
                    <input asp-for="PacoteTuristico.Destino.PontoTuristicoPrincipal" class="form-control"
                           placeholder="Ex: Cristo Redentor" />
                    <span asp-validation-for="PacoteTuristico.Destino.PontoTuristicoPrincipal" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PacoteTuristico.Destino.Descricao" class="form-label"></label>
                    <textarea asp-for="PacoteTuristico.Destino.Descricao" class="form-control" rows="2"
                              placeholder="Descreva o destino..."></textarea>
                    <span asp-validation-for="PacoteTuristico.Destino.Descricao" class="text-danger"></span>
                </div>
            </div>
        </div>

       
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Informações da Hospedagem</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PacoteTuristico.Hospedagem.Tipo" class="form-label"></label>
                        <select asp-for="PacoteTuristico.Hospedagem.Tipo" class="form-select">
                            <option value="">Selecione o tipo</option>
                            @foreach (var tipo in Model.TiposHospedagem)
                            {
                                <option value="@tipo">@tipo</option>
                            }
                        </select>
                        <span asp-validation-for="PacoteTuristico.Hospedagem.Tipo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="PacoteTuristico.Hospedagem.Nome" class="form-label"></label>
                        <input asp-for="PacoteTuristico.Hospedagem.Nome" class="form-control"
                               placeholder="Ex: Hotel Copacabana Palace" />
                        <span asp-validation-for="PacoteTuristico.Hospedagem.Nome" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="PacoteTuristico.Hospedagem.Classificacao" class="form-label"></label>
                        <select asp-for="PacoteTuristico.Hospedagem.Classificacao" class="form-select">
                            <option value="1">⭐ 1 Estrela</option>
                            <option value="2">⭐⭐ 2 Estrelas</option>
                            <option value="3" selected>⭐⭐⭐ 3 Estrelas</option>
                            <option value="4">⭐⭐⭐⭐ 4 Estrelas</option>
                            <option value="5">⭐⭐⭐⭐⭐ 5 Estrelas</option>
                        </select>
                        <span asp-validation-for="PacoteTuristico.Hospedagem.Classificacao" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <div class="form-check mt-4">
                            <input asp-for="PacoteTuristico.Hospedagem.IncluiCafeManha" class="form-check-input" />
                            <label asp-for="PacoteTuristico.Hospedagem.IncluiCafeManha" class="form-check-label"></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Serviços Incluídos</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-check">
                            <input asp-for="PacoteTuristico.IncluiPassagemAerea" class="form-check-input" />
                            <label asp-for="PacoteTuristico.IncluiPassagemAerea" class="form-check-label"></label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check">
                            <input asp-for="PacoteTuristico.IncluiTraslados" class="form-check-input" />
                            <label asp-for="PacoteTuristico.IncluiTraslados" class="form-check-label"></label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check">
                            <input asp-for="PacoteTuristico.IncluiGuia" class="form-check-input" />
                            <label asp-for="PacoteTuristico.IncluiGuia" class="form-check-label"></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-success btn-lg">
                <i class="fas fa-save"></i> Cadastrar Pacote
            </button>
            <a asp-page="Index" class="btn btn-secondary btn-lg">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var forms = document.querySelectorAll('.needs-validation');

            Array.prototype.slice.call(forms).forEach(function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        });
    </script>
}