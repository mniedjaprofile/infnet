@page
@model EntidadeReserva.Pages.CreatePacoteTuristicoModel

@{
    ViewData["Title"] = "Novo Pacote Turístico";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form method="post">
        <div class="mb-3">
            <label asp-for="PacoteTuristico.Nome" class="form-label"></label>
            <input asp-for="PacoteTuristico.Nome" class="form-control" />
            <span asp-validation-for="PacoteTuristico.Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PacoteTuristico.Descricao" class="form-label"></label>
            <textarea asp-for="PacoteTuristico.Descricao" class="form-control" rows="3"></textarea>
            <span asp-validation-for="PacoteTuristico.Descricao" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PacoteTuristico.Destino" class="form-label"></label>
            <input asp-for="PacoteTuristico.Destino" class="form-control" />
            <span asp-validation-for="PacoteTuristico.Destino" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PacoteTuristico.Preco" class="form-label"></label>
            <input asp-for="PacoteTuristico.Preco" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="PacoteTuristico.Preco" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PacoteTuristico.DuracaoDias" class="form-label"></label>
            <input asp-for="PacoteTuristico.DuracaoDias" class="form-control" />
            <span asp-validation-for="PacoteTuristico.DuracaoDias" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Cadastrar Pacote</button>
            <a asp-page="/Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}